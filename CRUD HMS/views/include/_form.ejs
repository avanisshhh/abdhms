 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Hotel Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="LandMark">
        </div>
        <div class="form-group">
            <label for="address" class="text-light">Address</label>
            <input type="text" name="address" value="" placeholder="Mall Road">
        </div>
        <div class="form-group">
            <label for="city" class="text-light">City</label>
            <input type="text" name="city" value="" placeholder="Kanpur">
        </div>
        <div class="form-group">
            <label for="country" class="text-light">Country</label>
            <input type="text" name="country" value="" placeholder="India">
        </div>
        <div class="form-group">
            <label for="hotelId" class="text-light">RG Hotel ID</label>
            <input type="text" name="hotelId" value="" placeholder="112233">
        </div>
        <div class="form-group" style="display: flex; flex-direction:column">
            <label for="date" class="text-light">Date</label>
            <input type="date" name="date" value="" placeholder="">
        </div>
        <!-- <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div> -->
    

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>